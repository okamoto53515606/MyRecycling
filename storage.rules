rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // 商品の画像は "products/{userId}/{timestamp}-{fileName}" のパスに保存
    match /products/{userId}/{fileName} {

      // 読み取り: 誰でも許可
      // 商品の画像は公開されている必要があるため
      allow read: if true;

      // 書き込み (作成・更新・削除):
      // ログイン済み、かつ、アップロードするユーザーが管理者(admin)である場合のみ許可
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
